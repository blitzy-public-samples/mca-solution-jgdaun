# API Configuration
# Base URL for API requests (required for configureAxios)
REACT_APP_API_BASE_URL=https://api.example.com

# API version for request headers
REACT_APP_API_VERSION=v1

# Authentication Configuration
# Local storage key for JWT auth token
REACT_APP_AUTH_TOKEN_KEY=auth_token

# Local storage key for JWT refresh token
REACT_APP_REFRESH_TOKEN_KEY=refresh_token

# Theme Configuration
# Theme setting for application styling (default, dark, light)
REACT_APP_THEME=default

# API Request Configuration
# Timeout for API requests in milliseconds
REACT_APP_API_TIMEOUT=30000

# Maximum number of retry attempts for failed requests
REACT_APP_MAX_RETRY_COUNT=3

# Delay between retry attempts in milliseconds
REACT_APP_RETRY_DELAY=1000

# Development Configuration
# Enable debug mode for additional logging
REACT_APP_ENABLE_DEBUG=false